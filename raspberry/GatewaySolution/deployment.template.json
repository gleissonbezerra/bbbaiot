{
  "$schema-template": "4.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.1",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "21iariot": {
                "username": "$CONTAINER_REGISTRY_USERNAME",
                "password": "$CONTAINER_REGISTRY_PASSWORD",
                "address": "21iariot.azurecr.io"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.2",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.2",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "CommandModule": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.CommandModule.arm32v7}",
              "createOptions": 
              {
                "Env": [
                  "I2C_BUS_NUMBER=1",
                  "I2C_SLAVE_ADDRESS=8",
                  "I2C_INTERVAL=10",
                  "PEOPLE_ALERT_INTERVAL=10.0"
                ],
                "HostConfig":
                {
                  "Privileged": true
                }

              }
            }
          },
          "MobileDetectionModule": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.MobileDetectionModule.arm32v7}",
              "createOptions": 
              {
                "HostConfig": {
                  "Privileged": true,
                  "PortBindings": {
                    "8080/tcp": [
                      {
                        "HostPort": "8080"
                      }
                    ]
                  }
                }
              }
            }
          },
          "CameraModule": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.CameraModule.arm32v7}",
              "createOptions": 
              {
                "Env": [
                  "CAMERA_INDEX=0",
                  "CAMERA_INTERVAL=1",
                  "INFERENCE_INTERVAL=1.5",
                  "INFERENCE_URL=http://MobileDetectionModule:8080/analyze"
                ],
                "HostConfig":
                {
                  "Privileged": true
                }
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.1",
        "routes": {
          "CameraModuleToCommandModule": "FROM /messages/modules/CameraModule/outputs/detectionsOutput INTO BrokeredEndpoint(\"/modules/CommandModule/inputs/detectionsInput\")",
          "CommandModuleToIoTHub": "FROM /messages/modules/CommandModule/outputs/* INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    }
  }
}